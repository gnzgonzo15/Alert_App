
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true">

<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.avallejo.myapplication.Perfil">


    <ImageView
        android:id="@+id/imgperfil"
        android:layout_width="120sp"
        android:layout_height="120sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="78sp"
        android:src="@drawable/perfil"
        />

    <View
        android:id="@+id/separator2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/imgperfil"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:background="@color/material_blue_grey_800"/>

    <TextView
        android:id="@+id/textuser"
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="230sp"
        android:hint=""
        android:textAlignment="center"

        />

    <TextView
        android:id="@+id/ver_usuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_below="@+id/textuser"
        android:text="@string/nombre_de_usuario"
        android:layout_centerHorizontal="true"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textcorreo"
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="320sp"
        android:hint=""
        android:textAlignment="center"

        />

    <TextView
        android:id="@+id/ver_nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="350sp"
        android:text="@string/correo"
        android:textAlignment="center"
        android:textSize="20sp"

        />

    <TextView
        android:id="@+id/textpass"
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="410sp"
        android:hint="*************"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/ver_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="440sp"
        android:text="@string/contrase_a"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/actualizar"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="490sp"
        android:id="@+id/ActualizarP"
        android:textStyle="bold"

        />


    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navigation" />


</RelativeLayout>

</ScrollView>